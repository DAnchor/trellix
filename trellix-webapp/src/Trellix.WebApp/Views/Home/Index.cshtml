@{
    ViewData["Title"] = "Home Page";
    var token = ViewBag.Sha256NonceValue;
}

<div class="text-center">
    <div class="row border border-dark border-bottom mt-2 mb-2 bg-dark">
        <div class="col-12">
            <h2 class="text-white">Attachments</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="row d-flex justify-content-start">
                <div class="col-6 w-100">
                    <a href="#" data-toggle="#x-add-modal" data-target="#x-add-modal" id="x-add-attachment"
                       class="link-dark"><i class="bi bi-file-pdf h5 d-flex justify-content-start"><span>&nbsp;Add Attachment</span></i></a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="row d-flex justify-content-end">
                <div class="col-6 w-100">
                    <div class="d-flex justify-content-end" id="x-response-container">
                        <p id="x-response-message"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Filename</th>
                <th scope="col">Date Created</th>
                <th scope="col">Date Modified</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<partial name="_AddAttachmentPartial.cshtml" />
<environment Include="Development">
    <script src="~/js/home/index.js" asp-append-version="true" nonce="@token"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/home/index.min.js" asp-append-version="true" nonce="@token"></script>
</environment>
